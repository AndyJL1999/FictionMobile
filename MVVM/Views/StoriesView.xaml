<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FictionMobile.MVVM.Views.StoriesView"
             Title="Stories">

    <Grid>
        <CollectionView ItemsSource="{Binding Stories}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout StyleClass="Header" VerticalOptions="Start">
                        <Label Text="{Binding Title}" FontSize="Title"/>
                        <Label StyleClass="HeaderSubTitle" Text="{Binding Author}"/>
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>