<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:FictionMobile.MVVM.ViewModels"
             x:Class="FictionMobile.MVVM.Views.StoriesView"
             Title="Stories">

    <Grid BackgroundColor="#272537">
        <CollectionView x:Name="collectionView"
                        ItemsSource="{Binding Stories}"
                        SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={RelativeSource 
                                                                    AncestorType={x:Type vm:StoriesViewModel}}, 
                                                                    Path=GoToReadCommand}"/>
                        </Grid.GestureRecognizers>

                        <VerticalStackLayout StyleClass="Header" VerticalOptions="Start">
                            <Label Text="{Binding Title}" FontSize="Title"/>
                            <Label StyleClass="HeaderSubTitle" Text="{Binding Author}"/>
                        </VerticalStackLayout>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>